
{
  "rules": {
    ".read": false,
    ".write": false,

    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "posts": {
      ".read": true,
      "$postId": {
        ".write": "auth != null && (
          auth.uid === data.child('owner').val() ||
          root.child('admins').child(auth.uid).exists()
        )"
      }
    },

    "admins": {
      ".read": false,
      ".write": false
    }
  }
}
