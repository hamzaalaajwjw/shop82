{
  "name": "chat-pro",
  "version": "2.0.0",
  "description": "Professional Social Chat Application",
  "main": "src/scripts/app.js",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost",
    "dev": "concurrently \"npm run watch-css\" \"npm start\"",
    "build": "npm run build-css",
    "watch-css": "chokidar \"src/styles/*.css\" -c \"npm run build-css\"",
    "build-css": "node-sass --output-style compressed src/styles/main.css public/css/main.min.css",
    "deploy": "firebase deploy --only hosting",
    "test": "jest",
    "lint": "eslint src/scripts/**/*.js",
    "format": "prettier --write \"src/**/*.{js,html,css}\""
  },
  "keywords": [
    "chat",
    "social",
    "firebase",
    "real-time",
    "messaging"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2",
    "node-sass": "^9.0.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "jest": "^29.6.0"
  },
  "dependencies": {
    "firebase": "^10.7.0",
    "recordrtc": "^5.6.2",
    "emoji-picker-element": "^1.13.0",
    "dayjs": "^1.11.9"
  }
}